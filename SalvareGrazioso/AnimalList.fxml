<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AnimalList">
   <children>
      <TableView fx:id="table" layoutX="24.0" layoutY="53.0" prefHeight="293.0" prefWidth="950.0">
        <columns>
          <TableColumn fx:id="id" prefWidth="50.0" text="Id" />
          <TableColumn fx:id="name" editable="true" minWidth="50.0" prefWidth="116.0" text="Name" />
            <TableColumn fx:id="breed" editable="true" prefWidth="116.0" text="Breed" />
            <TableColumn fx:id="outcomeType" prefWidth="200.0" text="Outcome Type" />
            <TableColumn fx:id="age" editable="true" prefWidth="116.0" text="Age" />
            <TableColumn fx:id="gender" editable="true" prefWidth="116.0" text="Gender" />
            <TableColumn fx:id="city" editable="true" prefWidth="116.0" text="City" />
            <TableColumn fx:id="state" editable="true" prefWidth="116.0" text="State" />
        </columns>
      </TableView>
       <Button fx:id="addAnimal" layoutX="280.0" layoutY="353.0" mnemonicParsing="false" onAction="#addAnimal" text="Add Animal" textAlignment="CENTER">
           <font>
               <Font size="18.0" />
           </font>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </Button>
       <Button layoutX="431.0" layoutY="353.0" mnemonicParsing="false" onAction="#editAnimalList" text="Update Animal" textAlignment="CENTER">
           <font>
               <Font size="18.0" />
           </font>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </Button>
       <Button layoutX="610.0" layoutY="353.0" mnemonicParsing="false" onAction="#deleteAnimal" text="Delete Animal" textAlignment="CENTER">
           <font>
               <Font size="18.0" />
           </font>
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
       </Button>
      <Label fx:id="status" alignment="CENTER" layoutX="24.0" layoutY="14.0" prefHeight="21.0" prefWidth="702.0" textAlignment="CENTER" textFill="#dd1313">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
